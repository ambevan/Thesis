f = open("87A_paper.bib",'r')
filedata=f.read()
f.close()

newdata=filedata.replace('Astronomy and Astrophysics (ISSN 0004-6361)',r'\aap')
newdata=filedata.replace('The Astrophysical Journal',r'\apj')
newdata=newdata.replace('Monthly Notices of the Royal Astronomical Society',r'\mnras')
newdata=newdata.replace('Astronomy and Astrophysics',r'\aap')
newdata=newdata.replace('Memorie della societ\`{a} astronomica italiana supplementi',r'\memsai')
newdata=newdata.replace('Mon. Not. R. Astron. Soc. Lett.',r'\mnras')
newdata=newdata.replace('Nature',r'\nat')
newdata=newdata.replace('Science (New York, N.Y.)',r'\sci')
newdata=newdata.replace('Science',r'\sci')
newdata=newdata.replace('The Astronomical Journal',r'\aj')
newdata=newdata.replace('Zeitschrift f\"{u}r Astrophysik',r'\zap')

f = open("87A_paper_test.bib",'w')
f.write(newdata)
f.close()
